    <title>Payment gateway</title>
</head>

<body>
    <section class="entry pdg50">
        <div class="container">
            <div class="row mt-5">
                <div class="col-md-6 m-auto">
                    <div class="card card-body">
                        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Pay</h1>
                        <div class="form-group">
                            <p> <b>Address: </b><%=address%></p>
                            <p><b>Amount: </b><%=amount%> Ether + Gas Fee</p>
                            <button onclick="makePayment('<%=address%>', '<%=amount%>')"
                                class="btn btn-primary btn-block">Pay</button>
                            <div style="margin-top: 25px;" class="alert alert-dark" id="result" role="alert"></div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
